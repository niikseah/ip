<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<fx:root alignment="TOP_RIGHT"
         spacing="20.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <VBox fx:id="dialogWrapper"
          HBox.hgrow="NEVER"
          alignment="TOP_LEFT">
      <children>
        <TextFlow fx:id="dialog" styleClass="dialog-bubble" style="-fx-line-spacing: 0;" />
      </children>
    </VBox>
    <ImageView fx:id="displayPicture" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" />
  </children>
  <padding>
    <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
  </padding>
</fx:root>
